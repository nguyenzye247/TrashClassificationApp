<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="2dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_result"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cardboard1"
        app:civ_border_color="@color/white_100"
        app:civ_border_width="1dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/gl_sep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.15" />

    <ProgressBar
        android:id="@+id/progress_bar_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:indeterminateTint="@color/blue_200"
        app:layout_constraintBottom_toBottomOf="@id/iv_result"
        app:layout_constraintEnd_toEndOf="@id/iv_result"
        app:layout_constraintStart_toStartOf="@id/iv_result"
        app:layout_constraintTop_toTopOf="@id/iv_result"
        app:layout_constraintWidth_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_sep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <TextView
        android:id="@+id/tv_result_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/black_100"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/tv_date"
        app:layout_constraintStart_toEndOf="@id/gl_sep"
        app:layout_constraintTop_toTopOf="@id/iv_result"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Cardboard" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/black_200"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_result"
        app:layout_constraintStart_toStartOf="@id/tv_result_class"
        app:layout_constraintTop_toBottomOf="@id/tv_result_class"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="18 thg 12 2022" />

    <TextView
        android:id="@+id/tv_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/inter_semibold"
        android:textColor="@color/viva_magenta"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_result"
        tools:text="69%" />

</androidx.constraintlayout.widget.ConstraintLayout>
